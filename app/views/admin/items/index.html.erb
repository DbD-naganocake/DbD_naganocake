<h2>商品一覧</h2>
<%= link_to new_admin_item_path do %>
  <img src="/assets/plus_icon.png" alt="">
<% end %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.item_name, admin_item_path(item.id) %></td>
        <td><%= item.without_tax.to_s(:delimited)%></td>
        <td><%= item.genre.genre_name %></td>
        <td>
          <% if item.sale_status == true %>
            <p>販売中</p>
          <% else %>
            <p>販売停止中</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>